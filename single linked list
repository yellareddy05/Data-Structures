#include <stdio.h>
#include <stdlib.h>

typedef struct listitem
{
    struct listitem *next;
    int data;
}listitem;

int main()
{
    listitem *listhead, *temp;
    listhead = NULL;
    
    //now populate the list
    for(int i=0;i<3;i++)
    {
        temp = malloc(sizeof(listitem));
        temp->data = i;
        temp->next = listhead;
        listhead = temp;
    }
    
    //now lets see what we got
    temp = listhead;
    while(temp!=NULL){
        printf("list item: current is %p; next is %p; data is %d\n",temp,temp->next,temp->data);
        temp = temp->next;
    }

    return 0;
}
